<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.davidsavrda.sidetracker.Medication">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medication"
        android:id="@+id/Title"
        android:textColor="#ffff0010"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Details"
        android:textColor="#ffff0010"
        android:textSize="25dp"
        android:id="@+id/DetailTitle"
        android:layout_below="@+id/Title"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Details about this medication"
        android:id="@+id/textView6"
        android:layout_below="@+id/DetailTitle"
        android:layout_alignStart="@+id/Title" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/AlarmListView"
        android:layout_below="@+id/Alarms"
        android:layout_alignParentStart="true"
        android:textColor="#ffff0010"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Alarms"
        android:textColor="#ffff0010"
        android:textSize="25dp"
        android:id="@+id/Alarms"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set New Alarm"
        android:id="@+id/setNewAlarm"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/AlarmListView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff0010"
        android:onClick="addAlarm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Side Effects"
        android:id="@+id/RecordSideEffect"
        android:layout_below="@+id/setNewAlarm"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff0010"
        android:onClick="viewSideEffect" />

</RelativeLayout>
